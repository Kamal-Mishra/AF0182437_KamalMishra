package practice_prog;

public class Display_Heir extends Accept_Heir {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Display_Heir obj= new Display_Heir();
		obj.display();
	}
	public void display()
	{
		accept();
	}

}


package practice_prog;

public class Mod_Heir extends Accept_Heir {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	public void mod(int a, int b)
	{
		int res=a%b;
		System.out.println("Mod is : "+res);
	}

}

